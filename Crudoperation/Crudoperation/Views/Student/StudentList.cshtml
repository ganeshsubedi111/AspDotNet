@model IEnumerable<Crudoperation.Models.Student>

@{
    ViewData["Title"] = "StudentList";
}

<h1>StudentList</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RollNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {

        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RollNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
                <td class="btn btn-primary mx-4 font-weight-bold">
                    @Html.ActionLink("Edit", "Create", new { id = item.Id, item.Name, item.Address })
                </td>
                <td class="btn btn-danger font-weight-bold">
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id, item.Name, item.Address })
                </td>
        </tr>
        
   
}
        </tbody>
</table>
