@model Crudoperation.Models.Student

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center text-white">Create</h1>

<h4 class="text-center text-white">Student</h4>
<hr />
<body class="bg-dark">
    <div class="row">
        <div class="col-md-4 mx-auto bg-gray">
            <form asp-action="AddStudent" class="needs-validation " novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <div class="form-group">
                   <input type="hidden" asp-for="Id" />
                    <label asp-for="Name" class="control-label text-white"></label>
                    <input asp-for="Name" class="form-control"  />
                    <div class="invalid-feedback">Please provide a name.</div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RollNo" class="control-label text-white"></label>
                    <input asp-for="RollNo" class="form-control" />
                    <div class="invalid-feedback">Please provide a roll number.</div>
                    <span asp-validation-for="RollNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label text-white"></label>
                    <input asp-for="Address" class="form-control" />
                    <div class="invalid-feedback">Please provide an address.</div>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div> <br>

                <div class="form-group">
                    <input type="submit" value="Add Student" class="btn btn-primary" />
                </div>
            </form>

            <div>
                <a asp-action="StudentList">Back to List</a>
            </div>
        </div>
    </div>

    @section Scripts{
        @{
            await Html.RenderPartialAsync("_validationScriptsPartial");
        }
    }

</body>